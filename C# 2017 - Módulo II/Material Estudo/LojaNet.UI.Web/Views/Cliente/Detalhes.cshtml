@model LojaNet.Models.Cliente

@{
    ViewBag.Title = "Detalhes";
}

<h2>Dados do Cliente</h2>
<hr/>

<dl>
    <dt>Nome:</dt>
    <dd>@Model.Nome</dd>
    

    <dt>Telefone:</dt>
    <dd>@Model.Telefone</dd>
  
    <dt>Email:</dt>
    <dd>@Model.Email</dd>
</dl>

<div>
    <hr/>
    <a href="/Cliente/Index" class="btn btn-default" >Voltar</a>
    <a href="/Cliente/Alterar/@Model.Id" class="btn btn-default">Alterar</a>
    <a href="/Cliente/Excluir/@Model.Id" class="btn btn-default">Excluir</a>

</div>


